@model IdentityChatEmailNightt.Entities.Message
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h2>Yeni Mesaj Oluşturma Sayfası</h2>
<form method="post">
    <label>Gönderici Email</label>
    <input type="text" asp-for="SenderEmail" class="form-control" />
    <br />
    <label>Alıcı Email</label>
    <input type="text" asp-for="ReciverEmail" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="Subject" class="form-control" />
    <br />
    <label>Mesaj Detayları</label>
    <input type="text" asp-for="MessageDetail" class="form-control" />
    <br />
    <button class="btn btn-primary">Mesaj Gönder</button>
</form>

